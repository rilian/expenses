<h1>
  <%= link_to 'Edit', edit_month_path(@month), class: 'btn btn-primary' %>
  <%= @month.name %>
</h1>

<table class="table">
  <thead>
  <tr>
    <th>Expense</th>
    <th>Sum</th>
    <th>Description</th>
  </tr>
  </thead>
  <tbody>
  <% @month.month_expenses.joins(:expense).order('expenses.weight DESC').each do |month_expense| %>
      <tr>
        <td>
          <%= link_to month_expense.expense.name, expense_path(month_expense.expense) %>
        </td>
        <td>
          <%= month_expense.sum_real %>
        </td>
        <td>
          <%= month_expense.desc %>
        </td>
      </tr>
  <% end %>
  </tbody>
  <thead>
  <tr>
    <th>Expense</th>
    <th>Sum</th>
    <th>Description</th>
  </tr>
  </thead>
</table>
